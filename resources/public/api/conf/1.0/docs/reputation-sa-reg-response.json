{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "correlationId": {
      "description": "A unique `UUID` to allow the request/response to be tracked",
      "type": "string",
      "length": 36
    },
    "address": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string"
        },
        "addressLine2": {
          "type": "string"
        },
        "addressLine3": {
          "type": "string"
        },
        "addressLine4": {
          "type": "string"
        },
        "addressLine5": {
          "type": "string"
        },
        "postCode": {
          "type": "string"
        },
        "uprn": {
          "type": "string"
        },
        "country": {
          "type": "string"
        }
      },
      "required": ["addressLine1", "country"]
    },
    "lookbackDays": {
      "description": "The number of days in which to look for matches",
      "type": "integer"
    },
    "reputation": {
      "type": "object",
      "properties": {
        "assessment": {
          "type": "object",
          "properties": {
            "action": {
              "type": "string",
              "enum": ["ACCEPT", "CHECK", "REJECT"]
            },
            "reasons": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "IMMEDIATE_RISK_4HR_POSTCODE_THRESHOLD_BREACHED",
                  "IMMEDIATE_RISK_12HR_LOCATIONREF_THRESHOLD_BREACHED",
                  "IMMEDIATE_RISK_24HR_POSTCODE_THRESHOLD_BREACHED",
                  "LONGER_TERM_RISK_120DAYS_POSTCODE_THRESHOLD_BREACHED",
                  "LONGER_TERM_RISK_120DAYS_LOCATIONREF_THRESHOLD_BREACHED",
                  "ADDRESS_ON_WATCHLIST"
                ]
              }
            }
          }
        }
      },
      "required": ["assessment"]
    },
    "insights": {
      "type": "object",
      "properties": {
        "risk": {
          "type": "object",
          "properties": {
            "riskScore": {
              "description": "Risk score",
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "reason": {
              "description": "Reason for risk score",
              "type": "string",
              "minimum": 0,
              "maximum": 256
            }
          },
          "required": [
            "riskScore",
            "reason"
          ]
        },
        "relationships": {
          "type": "object",
          "properties": {
            "occurrences": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "addressLine1": {
                    "type": "string"
                  },
                  "addressLine2": {
                    "type": "string"
                  },
                  "addressLine3": {
                    "type": "string"
                  },
                  "addressLine4": {
                    "type": "string"
                  },
                  "addressLine5": {
                    "type": "string"
                  },
                  "postCode": {
                    "type": "string"
                  },
                  "uprn": {
                    "type": "string"
                  },
                  "country": {
                    "type": "string"
                  },
                  "eventType": {
                    "type": "string"
                  },
                  "involvementGroup": {
                    "type": "string"
                  },
                  "involvementIndex": {
                    "type": "string"
                  },
                  "requestId": {
                    "type": "string"
                  },
                  "sessionId": {
                    "type": "string"
                  },
                  "userId": {
                    "type": "string"
                  },
                  "eventTime": {
                    "type": "string"
                  }
                },
                "required": [
                  "addressLine1",
                  "country",
                  "eventType",
                  "involvementGroup",
                  "involvementIndex",
                  "requestId",
                  "sessionId",
                  "userId",
                  "eventTime"
                ]
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "correlationId",
    "address",
    "lookbackDays",
    "reputation",
    "insights"
  ]
}
